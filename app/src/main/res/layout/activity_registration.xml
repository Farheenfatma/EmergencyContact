<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Registration"
        app:titleTextColor="#fff"
        android:background="#3F51B5"></android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:background="#29064fae"
                android:layout_marginTop="15dp"
                android:id="@+id/textInputLayout"
                android:textColorHint="#0a418f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/firstnamesignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First name"
                    android:textColor="#0e2581"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="26dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:background="#29064fae"
                android:id="@+id/textInputLayout2"
                android:textColorHint="#0a418f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/lastnamesignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last name"
                    android:textColor="#0e2581"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="79dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:background="#29064fae"
                android:id="@+id/textInputLayout3"
                android:textColorHint="#0a418f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/emailsignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"
                    android:textColor="#0e2581"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="134dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:background="#29064fae"
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:textColorHint="#0a418f"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/emergencycon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Emergency Contact"
                    android:textColor="#0e2581"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="188dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:background="#29064fae"
                android:id="@+id/textInputLayout5"
                android:textColorHint="#0a418f"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/emergencynum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Emergency Number"
                    android:inputType="phone"
                    android:textColor="#0e2581"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="248dp" />
            </android.support.design.widget.TextInputLayout>


            <RadioGroup
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:background="#29064fae"
                android:id="@+id/radioGroup"
                android:textColorHint="#0a418f"
                android:layout_width="match_parent"
                android:layout_height="34dp">
                <TextView
                    android:id="@+id/textView"
                    android:textColor="#0a418f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sex" />
                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Female" />
            </RadioGroup>

            <Button
                android:layout_marginTop="15dp"
                android:background="#76072cc4"
                android:id="@+id/signupbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:layout_gravity="center"
                android:onClick="click"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>