<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmergency">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Update Emergency"
        app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_margin="15dp">
      <android.support.design.widget.TextInputLayout
        android:layout_marginTop="15dp"
        android:background="#29064fae"
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:textColorHint="#0a418f"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emergencycon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact"
            android:textColor="#0e2581"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="188dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="15dp"
        android:background="#29064fae"
        android:id="@+id/textInputLayout5"
        android:textColorHint="#0a418f"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emergencynum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Number"
            android:inputType="phone"
            android:textColor="#0e2581"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="248dp" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_marginTop="15dp"
        android:background="#76072cc4"
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_gravity="center"
        android:onClick="click"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"/>
    <Button
        android:layout_marginTop="15dp"
        android:background="#76072cc4"
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_gravity="center"
        android:onClick="click"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"/>
  </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>